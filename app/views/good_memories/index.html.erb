<div class="space-y-8">
  <!-- ヒーローセクション -->
  <div class="text-center bg-white rounded-2xl shadow-lg p-8 border-4 border-pink-100">
    <h1 class="text-4xl font-bold text-pink-600 mb-4">今日の良かったこと</h1>
    <p class="text-gray-600 text-lg mb-6">毎日の小さな幸せを記録して、心を温かく保ちましょう</p>
    <div class="flex justify-center space-x-4">
      <%= link_to "新しい思い出を記録", new_good_memory_path, class: "bg-pink-500 hover:bg-pink-600 text-white px-6 py-3 rounded-lg text-lg font-semibold transition-colors shadow-lg" %>
    </div>
  </div>

  <!-- 統計情報 -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-white rounded-xl shadow-lg p-6 border-2 border-pink-100 text-center">
      <div class="text-3xl font-bold text-pink-600 mb-2"><%= @total_count %></div>
      <div class="text-gray-600">記録した思い出</div>
    </div>
    <div class="bg-white rounded-xl shadow-lg p-6 border-2 border-pink-100 text-center">
      <div class="text-3xl font-bold text-purple-600 mb-2"><%= @this_month_count %></div>
      <div class="text-gray-600">今月の思い出</div>
    </div>
    <div class="bg-white rounded-xl shadow-lg p-6 border-2 border-pink-100 text-center">
      <div class="text-3xl font-bold text-green-600 mb-2">
        <%= GoodMemory.where(mood: ['good', 'very_good']).count %>
      </div>
      <div class="text-gray-600">良い気分の日</div>
    </div>
  </div>

  <!-- 最近の思い出 -->
  <div class="bg-white rounded-2xl shadow-lg p-8 border-4 border-pink-100">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
      <span class="text-pink-500 mr-2">📝</span>
      最近の思い出
    </h2>
    
    <% if @good_memories.any? %>
      <div class="space-y-6">
        <% @good_memories.each do |memory| %>
          <div class="border-l-4 border-pink-300 pl-6 py-4 bg-gradient-to-r from-pink-50 to-white rounded-r-lg">
            <div class="flex justify-between items-start mb-2">
              <div class="flex items-center space-x-3">
                <span class="text-2xl"><%= memory.mood_emoji %></span>
                <span class="text-sm text-gray-500"><%= memory.date.strftime("%Y年%m月%d日") %></span>
                <span class="text-sm bg-pink-100 text-pink-700 px-2 py-1 rounded-full"><%= memory.mood_text %></span>
              </div>
              <div class="flex space-x-2">
                <%= link_to "詳細", memory, class: "text-pink-600 hover:text-pink-800 text-sm" %>
                <%= link_to "編集", edit_good_memory_path(memory), class: "text-blue-600 hover:text-blue-800 text-sm" %>
              </div>
            </div>
            <p class="text-gray-700 leading-relaxed"><%= memory.content %></p>
          </div>
        <% end %>
      </div>
      
      <div class="mt-8 text-center">
        <%= link_to "すべての思い出を見る", good_memories_path, class: "text-pink-600 hover:text-pink-800 font-semibold" %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="text-6xl mb-4">🌸</div>
        <p class="text-gray-600 text-lg mb-4">まだ思い出がありません</p>
        <p class="text-gray-500">今日の良かったことを記録してみませんか？</p>
      </div>
    <% end %>
  </div>

  <!-- 月別表示へのリンク -->
  <div class="bg-white rounded-2xl shadow-lg p-8 border-4 border-pink-100">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
      <span class="text-purple-500 mr-2">📅</span>
      月別で見る
    </h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <% (0..3).each do |i| %>
        <% date = i.months.ago %>
        <%= link_to monthly_memories_path(date.year, date.month), 
            class: "block p-4 text-center bg-gradient-to-br from-purple-50 to-pink-50 rounded-lg border-2 border-purple-100 hover:border-purple-300 transition-colors" do %>
          <div class="text-lg font-semibold text-purple-700"><%= date.strftime("%m月") %></div>
          <div class="text-sm text-gray-600"><%= date.strftime("%Y年") %></div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
