<% if @error %>
    <div class="error"><%= @error %></div>
<% end %>

<div class="card">
    <h2>今日の良かったこと</h2>
    <%= form_with model: @good_memory, local: true, class: "form" do |form| %>
        <div class="form-group">
            <%= form.label :date, "日付:" %>
            <%= form.date_field :date, value: Date.today, required: true %>
        </div>
        
        <div class="form-group">
            <%= form.label :content, "良かったこと:" %>
            <%= form.text_area :content, rows: 4, 
                          placeholder: "今日あった良いことを書いてみましょう。小さなことでも大丈夫です♪", 
                          required: true %>
        </div>
        
        <div class="form-group">
            <%= form.label :mood, "気分:" %>
            <div class="mood-selector">
                <% GoodMemory.moods.each do |mood, value| %>
                    <div class="mood-option">
                        <%= form.radio_button :mood, mood, class: "mood-radio" %>
                        <%= form.label "mood_#{mood}", class: "mood-label" do %>
                            <span class="mood-emoji"><%= GoodMemory.new(mood: mood).mood_emoji %></span>
                            <span class="mood-text"><%= GoodMemory.new(mood: mood).mood_text %></span>
                        <% end %>
                    </div>
                <% end %>
            </div>
        </div>
        
        <div class="form-actions">
            <%= form.submit @good_memory.persisted? ? '更新する' : '記録する', class: "btn" %>
            <% if @good_memory.persisted? %>
                <%= link_to '書き直す', edit_today_path, class: "btn btn-secondary" %>
                <%= button_to '削除', good_memory_path(@good_memory), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger" %>
            <% end %>
        </div>
    <% end %>
</div>

<% if @good_memories && @good_memories.length > 0 %>
<div class="card">
    <h2>最近の記録</h2>
    <% @good_memories.each do |memory| %>
        <div class="record">
            <div class="record-header">
                <div class="date"><%= memory.date.strftime("%Y年%m月%d日") %></div>
                <div class="record-actions">
                    <%= link_to '編集', edit_good_memory_path(memory), class: "btn-small btn-edit" %>
                    <%= button_to '削除', good_memory_path(memory), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn-small btn-delete" %>
                </div>
            </div>
            <div class="mood-display">
                <span class="mood-emoji"><%= memory.mood_emoji %></span>
                <span class="mood-text"><%= memory.mood_text %></span>
            </div>
            <div class="content"><%= memory.content %></div>
        </div>
    <% end %>
</div>
<% end %>
